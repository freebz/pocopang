	 	    android:id="@+id/animal_list"
	 	    android:layout_width="fill_parent"
	 	    android:layout_height="0dip"
	 	    android:layout_weight="1" />
	 	
	 	<!--
	 	<Button
	 	    android:text="@string/get_animal"
	 	    android:layout_width="wrap_content"
